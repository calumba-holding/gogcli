#!/usr/bin/env bash
set -euo pipefail

echo "üîç Running fmt check..."
make fmt-check 2>&1 || {
    echo "‚ùå Format check failed. Run 'make fmt' and re-commit."
    exit 1
}

echo "üîç Running lint..."
if ! make lint 2>&1; then
    echo "‚ö†Ô∏è  Lint warnings found. Review above before pushing."
    echo "   To skip: git commit --no-verify"
fi

echo "‚úÖ Pre-commit checks passed."
